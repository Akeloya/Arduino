<local:MenuItem x:Class="ArduinoEmulator.Controls.ImageMenuItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ArduinoEmulator.Controls"
          xmlns:converters="clr-namespace:ArduinoEmulator.Converters">
    <MenuItem.Resources>
        <converters:ByteArrayToImageConverter x:Key="ImageConverter"></converters:ByteArrayToImageConverter>
    </MenuItem.Resources>
    <MenuItem.Icon>
        <Image Source="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:ImageMenuItem}}, Path=ResourceImage, Converter={StaticResource ImageConverter}}"></Image>
    </MenuItem.Icon>
</local:MenuItem>
